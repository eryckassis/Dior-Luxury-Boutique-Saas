{
  "name": "dior",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:staged": "prettier --write",
    "format:fix": "prettier --write . && git add -A",
    "prepare": "husky",
    "format:css": "prettier --write \"src/styles/**/*.css\"",
    "lint:css": "prettier --check \"src/styles/**/*.css\"",
    "remove-comments": "node scripts/remove-comments.js",
    "remove-comments:safe": "node scripts/remove-comments.js && npm run format",
    "backup-and-clean": "git add -A && git commit -m \"Backup before removing comments\" && npm run remove-comments:safe",
    "test:format": "prettier --check .",
    "fix-indentation": "prettier --write . --tab-width 2 --use-tabs false"
  },
  "lint-staged": {
    "*.{js,jsx,mjs}": ["prettier --write --tab-width 2", "git add"],
    "*.{css,scss}": ["prettier --write --tab-width 2", "git add"],
    "*.{html,htm}": ["prettier --write --tab-width 2", "git add"],
    "*.{json,md}": ["prettier --write --tab-width 2", "git add"]
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "postcss": "^8.4.35",
    "postcss-strip-inline-comments": "^0.1.5",
    "prettier": "^3.8.1",
    "prettier-plugin-css-order": "^2.2.0",
    "strip-json-comments": "^5.0.1",
    "vite": "^7.1.7"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.91.0",
    "greensock": "^1.20.2",
    "gsap": "^3.13.0",
    "lenis": "^1.3.15",
    "locomotive-scroll": "^4.1.4"
  }
}
